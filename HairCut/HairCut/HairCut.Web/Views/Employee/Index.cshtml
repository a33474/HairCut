@using HairCut.ViewModels;
@model IEnumerable<EmployeeVm>
    @{
        ViewData["Title"] = "Index";
    }
<h2>Create Employee</h2>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Name</th>

        </tr>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@Html.ActionLink("Edit", "EditEmployee", new { id = employee.Id })</td>
                <td>@Html.ActionLink("Delete", "DeleteEmployee", new { id = employee.Id })</td>
            </tr>
        }
    </table>
    <a href="@Url.Action("CreateEmployee","Employee")">Create</a>